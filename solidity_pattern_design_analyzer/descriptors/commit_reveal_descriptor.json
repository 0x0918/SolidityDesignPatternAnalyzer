{
    "name": "Commit & Reveal",
    "checks": [
        {
            "check_type": "fn_call",
            "callable_function": [
                "commit(*any*)", "reveal(*any*)"
            ]
        },
        {
            "check_type": "fn_definition",
            "fn_names": ["commit", "reveal", "tracecommit"]
        },
        {
            "check_type": "event_emit",
            "event_names": ["logcommit*", "logreveal*"]
        }
    ]
}