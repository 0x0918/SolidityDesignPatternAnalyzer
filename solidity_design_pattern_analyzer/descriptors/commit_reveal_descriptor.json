{
    "name": "Commit & Reveal",
    "checks": [
        {
            "check_type": "fn_call",
            "callable_function": [
                "_regex:commit\\(.*\\)", "_regex:reveal\\(.*\\)"
            ]
        },
        {
            "check_type": "fn_definition",
            "fn_names": ["commit", "reveal", "tracecommit"]
        },
        {
            "check_type": "event_emit",
            "event_names": ["_regex:logcommit", "_regex:logreveal"]
        }
    ]
}